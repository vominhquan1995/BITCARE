<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f0f0f0"
    tools:context="asia.health.bitcare.fragment.BloodPressureInputFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f0f0f0"
        tools:ignore="UselessParent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_16dp"
            android:background="@color/color_ffffff"
            app:cardCornerRadius="@dimen/cardview_default_radius"
            app:cardElevation="@dimen/margin_16dp"
            app:cardMaxElevation="@dimen/cardview_max_elevation_0dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <include
                        android:id="@+id/vgInputTime"
                        layout="@layout/viewgroup_input_time" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:layout_marginLeft="@dimen/margin_16dp"
                    android:layout_marginRight="@dimen/margin_16dp"
                    android:orientation="vertical">

                    <!--include
                        android:id="@+id/vgExercise"
                        layout="@layout/viewgroup_radio_choice" /-->

                    <include
                        android:id="@+id/vgMedicine"
                        layout="@layout/viewgroup_radio_choice" />

                    <include
                        android:id="@+id/vgType"
                        layout="@layout/viewgroup_radio_choice" />

                    <include
                        android:id="@+id/vgVal"
                        layout="@layout/viewgroup_input_unit" />

                    <include
                        android:id="@+id/vgWeight"
                        layout="@layout/viewgroup_input_unit" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:gravity="center|bottom">

                    <include
                        android:id="@+id/vgButton"
                        layout="@layout/viewgroup_input_two_button" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>
</FrameLayout>

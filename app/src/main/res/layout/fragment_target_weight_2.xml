<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f0f0f0"
    tools:context="asia.health.bitcare.fragment.BloodPressureInputFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_16dp"
            app:cardCornerRadius="@dimen/cardview_default_radius"
            app:cardElevation="@dimen/margin_16dp"
            app:cardMaxElevation="@dimen/cardview_max_elevation_0dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:background="@color/colorYellow"
                    android:gravity="center"
                    android:padding="@dimen/margin_16dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/weight_title" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/margin_16dp"
                    android:layout_weight="0.6"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/margin_8dp"
                        android:layout_weight="0.3"
                        android:background="@drawable/stroke_weight_value"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin_8dp"
                            android:layout_weight="0.4"
                            android:gravity="center"
                            android:text="@string/cap_weight_now"
                            android:textColor="@color/text_color_highlight"
                            android:textSize="@dimen/txt_size_18sp" />

                        <TextView
                            android:id="@+id/tvTargetWeight"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin_8dp"
                            android:layout_marginRight="@dimen/margin_8dp"
                            android:layout_weight="0.4"
                            android:gravity="center|right"
                            android:text="82"
                            android:textColor="@color/text_color_highlight"
                            android:textSize="@dimen/txt_size_20sp" />

                        <TextView
                            android:id="@+id/tvUnit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin_8dp"
                            android:layout_weight="0.2"
                            android:gravity="center|left"
                            android:text="@string/unit_kg"
                            android:textColor="@color/text_color_highlight"
                            android:textSize="@dimen/txt_size_12sp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/margin_16dp"
                        android:layout_weight="0.4"
                        android:background="@drawable/weight_arrow" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/margin_16dp"
                        android:layout_weight="0.3"
                        android:focusableInTouchMode="true"
                        android:background="@color/colorBoxWeight"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.4"
                            android:layout_margin="@dimen/margin_8dp"
                            android:gravity="center"
                            android:text="@string/cap_targetweight"
                            android:textColor="@color/text_color_white"
                            android:textSize="@dimen/txt_size_18sp" />

                        <EditText
                            android:id="@+id/edtTargetWeight"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.4"
                            android:layout_margin="@dimen/margin_8dp"
                            android:gravity="center|right"
                            android:background="@color/colorBoxWeight"
                            android:textColor="@color/text_color_white"
                            android:textSize="@dimen/txt_size_20sp"
                            android:inputType="number" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin_8dp"
                            android:layout_weight="0.2"
                            android:gravity="center|left"
                            android:text="@string/unit_kg"
                            android:textColor="@color/text_color_white"
                            android:textSize="@dimen/txt_size_12sp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:layout_weight="0.15"
                    android:gravity="bottom">

                    <include
                        android:id="@+id/vgButton"
                        layout="@layout/viewgroup_input_two_button" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>
</FrameLayout>


